   month = {6},
   pages = {13786-13793},
   publisher = {Institute of Electrical and Electronics Engineers Inc.},
   title = {The Potential of Refractive Index Nanobiosensing Using a Multi-Band Optically Tuned Perfect Light Metamaterial Absorber},
